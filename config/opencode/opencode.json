{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "lsp": {
    "rubocop": {
      "disabled": true
    },
    "ruby-lsp": {
      "disabled": false,
      "command": ["bundle", "exec", "ruby-lsp"],
      "extensions": [".rb", ".rake", ".gemspec"]
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    },
    "standardrb": {
      "disabled": false,
      "extensions": [".rb", ".rake", ".gemspec"]
    }
  },
  "instructions": [
    "AGENTS.md"
  },
  "permission": {
    "*": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "read": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "bash": {
      "git status": "allow"
    }
  },
}
