{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "lsp": {
    "rubocop": {
      "disabled": true
    },
    "ruby-lsp": {
      "disabled": false,
      "command": ["bundle", "exec", "ruby-lsp"],
      "extensions": [".rb", ".rake", ".gemspec"]
    }
  },
  "formatter": {
    "rubocop": {
      "disabled": true
    },
    "standardrb": {
      "disabled": false,
      "extensions": [".rb", ".rake", ".gemspec"]
    }
  },
  "instructions": [
    "AGENTS.md"
  ],
  "permission": {
    "*": "ask",
    "edit": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "read": "allow",
    "bash": {
      "git *": "ask",
      "bin/rspec *": "allow",
      "git branch --show-current": "allow",
      "git diff *": "allow",
      "git grep *": "allow",
      "git ls-files *": "allow",
      "git log *": "allow",
      "git remote -v": "allow",
      "git rev-parse *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "command -v *": "allow",
      "ls *": "allow",
      "pwd": "allow",
      "rm *": "ask",
      "sudo *": "deny",
      "which *": "allow"
    },
    "todoread": "allow",
    "todowrite": "allow"
  }
}
