[color]
	ui = true
[user]
	name = Andr√© Costa
	email = andreccosta@me.com
[push]
	default = current
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[core]
	editor = code --wait
[init]
	defaultBranch = main
[alias]
	c = commit
	cm = commit
	cmm = commit -m
	co = checkout
	d = diff --color
	nb = checkout -b
	l = log --pretty='format:%C(green)%h%C(reset) %C(bold blue)%ar%C(reset) %an : %s' --graph
	last = log - 1 HEAD
	st = status
	diffs = diff --cached
[fetch]
	prune = true
[pull]
	rebase = false
	ff = only

[includeIf "gitdir:~/code/src/github.com/amplemarket/"]
	path = ~/code/src/github.com/amplemarket/.gitconfig
