#!/usr/bin/env bash

set -euo pipefail

help() {
  echo "A script to easily perform local development common tasks"
  echo ""
  echo "Usage: dev [-c container] <command>"
  echo ""
  echo "Commands:"
  echo "  up"
  echo "  console"
  echo "  migrate"
  echo "  run"
  echo "  restart"
  echo "  stop"
  echo "  terminal"
  echo "  test"
  exit 1
}

container="web"

OPTIND=1
while getopts 'c:' flag; do
  case "$flag" in
    c)
      container="$OPTARG"
    ;;
    *)
      echo "Unexpected flag"
    ;;
  esac
done
shift $((OPTIND-1))

up() {
  docker compose up -d $@
}

console() {
  docker compose exec -it $container rails console
}

migrate() {
  docker compose exec -it $container rails db:migrate
}

restart() {
  docker compose restart $@
}

run() {
  docker compose exec -it $container $@
}

stop() {
  docker compose stop $@
}

terminal() {
  docker compose exec -it $container bash
}

test() {
  docker compose exec -it $container bin/rspec $@
}

case "$1" in
  up)
    up "${@:2}"
  ;;
  console|c)
    console
  ;;
  migrate)
    migrate
  ;;
  restart)
    restart "${@:2}"
  ;;
  run)
    run "${@:2}"
  ;;
  stop)
     stop "${@:2}"
  ;;
  bash|terminal|term|t)
    terminal
  ;;
  test|rspec|spec)
    test "${@:2}"
  ;;
  *)
    help
    exit 1
  ;;
esac

exit 0
