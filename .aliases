#!/bin/bash

# navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# shorts
alias c='clear'
alias g='git'
alias h='history'
alias ll='ls -lpah'

# colors
if ls --color=auto -d . >/dev/null 2>&1; then
  alias ls='ls --color=auto'
elif ls -G -d . >/dev/null 2>&1; then
  alias ls='ls -G'
fi

if command printf 'x\n' | grep --color=auto -q x >/dev/null 2>&1; then
  alias grep='grep --color=auto'
fi

# curl
alias curl='curl -#'

# untar
alias untar='tar xvf'

# docker
alias compose='docker compose'

# utils
alias rm='rm -i'
alias rmdir='rm -ri'

# random
alias weather='curl -4 http://wttr.in/Porto,Portugal'
alias sft='sftp -R 128 -B 65536'

# cat
if type batcat &>/dev/null; then
  alias bat='batcat'
  alias batcat='batcat --theme="base16"'
fi

# gh
if type gh &>/dev/null; then
  alias gist='gh gist create'
fi

# bundler
if type bundle &>/dev/null; then
  alias bx='bundler exec'
fi

# rails
alias rc='bin/rails c'

# rg
alias rg='rg -i'
