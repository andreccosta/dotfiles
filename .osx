#!/bin/bash

# detect platform
[ "$(uname)" != "Darwin" ] && return

## functions

# show/hide dot files
show_dot() {
  defaults write com.apple.finder AppleShowAllFiles YES
  killall Finder
}

hide_dot() {
  defaults write com.apple.finder AppleShowAllFiles NO
  killall Finder
}

# show/hide desktop icons
show_icons() {
  defaults write com.apple.finder CreateDesktop true
  killall Finder
}

hide_icons() {
  defaults write com.apple.finder CreateDesktop false
  killall Finder
}

## aliases

# clipboard
alias clear='clear -x'
alias clip='pbcopy'
alias copy='pbcopy'
alias paste='pbpaste'
